{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ES2021.String"
    ]
  },
  // "include": ["src/**/*"],
  "include": [
    "src/**/*.ts",
    "src/types/express.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}